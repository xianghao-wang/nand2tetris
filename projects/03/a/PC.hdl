/**
 * A 16-bit counter with load and reset control bits.
 * if      (reset[t] == 1) out[t+1] = 0
 * else if (load[t] == 1)  out[t+1] = in[t]
 * else if (inc[t] == 1)   out[t+1] = out[t] + 1  (integer addition)
 * else                    out[t+1] = out[t]
 */

CHIP PC {
    IN in[16],load,inc,reset;
    OUT out[16];

    PARTS:
    Add16(a=out1, b[0]=true, b[1..15]=false, out=sum);
    Mux16(a=out1, b=sum, sel=inc, out=increment);
    Mux16(a=increment, b=in, sel=load, out=loaded);
    Mux16(a=loaded, b=false, sel=reset, out=received);
    Register(in=received, load=true, out=out, out=out1);
}
